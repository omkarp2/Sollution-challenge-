<!DOCTYPE html><html lang="en"><head>  <meta charset="UTF-8">  <meta name="viewport" content="width=device-width, initial-scale=1.0">  <title>Plant Disease Prediction</title>  <style>    body {      font-family: Arial, sans-serif;      margin: 0;      padding: 0;      background-color: #f0f0f0;      text-align: center;    }    #container {      margin: 20px;    }    #plantImage {      max-width: 100%;      height: auto;      border: 1px solid #ccc;      border-radius: 5px;      margin-bottom: 20px;    }    #predictionResult {      font-size: 18px;      font-weight: bold;      margin-bottom: 10px;    }    #diseaseDescription {      font-size: 16px;    }  </style></head><body>  <div id="container">    <h1>Plant Disease Prediction</h1>    <img id="plantImage" src="path_to_your_plant_image.jpg" alt="Plant Image">    <div id="predictionResult"></div>    <div id="diseaseDescription"></div>  </div>  <script>    // Function to make an API request for disease prediction    function predictDisease(imagePath) {      // Replace the URL with your server-side endpoint for prediction      const predictionEndpoint = "https://your-api-endpoint.com/predict";      // Make an API request      fetch(predictionEndpoint, {        method: 'POST',        headers: {          'Content-Type': 'application/json',        },        body: JSON.stringify({ imagePath: imagePath }),      })      .then(response => response.json())      .then(data => {        // Display prediction result and disease description        document.getElementById('predictionResult').innerText = `Predicted Disease: ${data.predictedDisease}`;        document.getElementById('diseaseDescription').innerText = `Disease Description: ${data.diseaseDescription}`;      })      .catch(error => console.error('Error:', error));    }    // Replace the image path with the path to your plant image    const imagePath = 'path_to_your_plant_image.jpg';    // Display the plant image    document.getElementById('plantImage').src = imagePath;    // Make a prediction request when the page loads    predictDisease(imagePath);  </script></body></html>